<!--Table view of all products for a single company-->

<div class='container'>
    <div class="row">
        <div class="col-md-4">
            <h1><span><%= cogroup.name %></span><font color="lightgrey">(公司)</font></h1>
            
        </div>
        <div class="col-md-4">
            <h2>
            <a href="/cogroup/toggle_supplier/<%= cogroup.name %>" class=
        <% if (cogroup.is_supplier) { %>
                "glyphicon glyphicon-ok btn btn-success"
        <% } else { %>
            "glyphicon glyphicon-remove btn btn-danger"
        <% } %>
                > 供應商</a>
            <a href="/cogroup/toggle_customer/<%= cogroup.name %>" class=
        <% if (cogroup.is_customer) { %>
                "glyphicon glyphicon-ok btn btn-success"
        <% } else { %>
            "glyphicon glyphicon-remove btn btn-danger"
        <% } %>
                > 客戶</a>
            <a href="/cogroup/show/<%= cogroup.name %>" class="btn btn-custom">聯絡信息</a>
                
                </h2>
        </div>
    </div>
    
	<hr>
    
    <div class="row">
        <div class="col-md-6 text-center">
        <h2>訂單編號: <span style="font-weight: 700"><%= order.orderID %></span></h2>
            </div>
        <div class="col-md-6 text-center">
        <h2>產品名稱: <span style="font-weight: 700"><%= order.MPN.inventory_name %></span></h2>
            </div>
    </div>
    
    <div class="row">
        <div class="col-md-3 text-center">
        <h3>件數價格<br><span style="font-weight: 700">$<%= order.price %></span>
            <% if (order.applytax === true) { %>
            <span class="label label-warning"><span class="glyphicon glyphicon-plus-sign"></span>稅</span>
            <% } else { %>
            <span class="label label-danger"><span class="glyphicon glyphicon-ban-circle"></span>稅</span>
            <% } %></h3>
            </div>
        <div class="col-md-3 text-center">
        <h3>訂單件數<br><span style="font-weight: 700"><%= order.qty %></span></h3>
            </div>
        <div class="col-md-3 text-center">
        <h3>出貨件數<br><span style="font-weight: 700"><%= order.qty_shipped() %></span></h3>
            </div>
        <div class="col-md-3 text-center">
        <h3>剩下件數<br><span style="font-weight: 700"><%= order.qty - order.qty_shipped() %></span></h3>
            </div>
    </div>
    
    <div class="row">
        <div class="col-md-12">
        <h3>備註: <span style="font-weight: 700"><%= order.ordernote %></span></h3>
            </div>
    </div>
    
	<hr>
    
    <h2>出貨紀錄</h2>
    
    <form action="/order/show">
        
        <input type="hidden" name="id" value="<%= id %>" />
<table class="table table-condensed">
    <thead class="text-uppercase"><tr>
        <th>Due Date</th>
        <th>Qty</th>
        <th>出貨日期</th>
        <th>出貨編號/ID</th>
        <th>Lot #</th>
        <th>Edit</th>
    </tr></thead>
    <tbody>
    <% shipments.forEach(function(shipmentitem) { %>
        <tr>
            <td><%= shipmentitem.duedate_string() %></td>
            <td><%= shipmentitem.qty %></td>
            <% if (shipmentitem.shipment_id !== undefined) { %>
                <td><%= shipmentitem.shipment_id.shipmentdate_string() %></td>
                <td><%= shipmentitem.shipment_id.shipment_no %></td>
            <% } else { %>
                <td colspan="2">(no shipment record)<%= shipmentitem.shipment_id %></td>
            <% } %>
            <td><%= shipmentitem.lot %></td>
            
            <td>
                <a href="/shipmentitem/edit/<%- shipmentitem.id %>" class="btn btn-xs btn-custom">編輯紀錄</a>
            </td>
        </tr>
    <% }); %>
        </tbody>
</table>
    
    
	<input type="submit" class="btn btn-medium btn-custom" name="make_shipment" value="Create Shipment">
	<input type="submit" class="btn btn-medium btn-custom" name="make_po" value="Create PO">
    
    </form>

</div>