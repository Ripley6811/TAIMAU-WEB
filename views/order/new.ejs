<!--Form for adding a new PO-->

<div class='container'>
    <div class="row">
        <div class="col-md-4">
            <h1><span><%= cogroup.name %></span><font color="lightgrey">(公司)</font></h1>
            
        </div>
        <div class="col-md-8">
            <h2>
            <a href="/cogroup/toggle_supplier/<%= cogroup.name %>" class=
        <% if (cogroup.is_supplier) { %>
                "glyphicon glyphicon-ok btn btn-success"
        <% } else { %>
            "glyphicon glyphicon-remove btn btn-danger"
        <% } %>
                > 供應商</a>
            <a href="/cogroup/toggle_customer/<%= cogroup.name %>" class=
        <% if (cogroup.is_customer) { %>
                "glyphicon glyphicon-ok btn btn-success"
        <% } else { %>
            "glyphicon glyphicon-remove btn btn-danger"
        <% } %>
                > 客戶</a>
            <a href="/cogroup/show/<%= cogroup.name %>" class="btn btn-custom">公司信息</a>
            <a href="/product/show/<%= cogroup.name %>" class="btn btn-custom">管理訂單</a>
                </h2>
        </div>
    </div>
    
    
    
    
	<hr>
    
    
    
    
    <form action="/order/create">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <label class="col-md-4 h2">訂單編號:</label>
                <div class="col-md-8 h2 has-success">
                    <input type="text" class="form-control input-lg input-30"  name="orderID" value="<%= order.orderID %>">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 h2">
                    產品名稱:
                </div>
                <div class="col-md-6 h2">
                    <select>
                        <% order.MPN.inventory_name %>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 h2">
                    件數價格:
                </div>
                <div class="col-md-8 h2">
                    <div class="input-group input-group-lg has-success">
                        <div class="input-group-addon">$</div>
                        <input type="number" step="0.001" class="form-control input-lg input-24" name="price">
                        <div class="input-group-addon">
                            <input type="radio" name="applytax" value="true" checked>應稅
                            <input type="radio" name="applytax" value="false">無稅
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4 h2">
                    訂單件數:
                </div>
                <div class="col-md-8 h2 has-success">
                    <input class="form-control input-lg input-24" min="1" type="number" name="qty" value="<%= order.qty %>">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 h2">
                    出貨件數:
                </div>
                <div class="col-md-8 h2">
                    <strong><%= order.qty_shipped() %></strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 h2">
                    剩下件數:
                </div>
                <div class="col-md-8 h2">
                    <strong><%= order.qty - order.qty_shipped() %></strong>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2 h2">
            備註:
        </div>
        <div class="col-md-10 h3 has-success">
            <input class="form-control input-lg input-24" type="text" name="ordernote" value="<%= order.ordernote %>">
        </div>
    </div>
    
        <% var flash = req.flash('message'); %>
        <% if(flash.length) { %>
        <p class="bg-success text-center">
        <%- flash %>
            </p>
        <% } %>
        
    <div class="row">
        <div class="col-md-12 h3 text-center">
	       <input type="submit" class="btn btn-medium btn-custom" value="提交新訂單">
        </div>
    </div>
    </form>
    
    
    
</div>