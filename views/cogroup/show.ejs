    </thead>
    <tbody data-bind="foreach: branches">
        <tr>
            <td style="width: 8%">
                <label style="width: 100%;" data-bind="text: name, visible: nameLock()"></label>
                <input size="4" placeholder="簡寫" data-bind="value: name, visible: !nameLock()">
            </td>
